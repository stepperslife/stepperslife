FROM node:22-alpine

WORKDIR /app

# Install dumb-init
RUN apk add --no-cache dumb-init curl

# Copy application code
COPY src/events-stepperslife/ .

# Install dependencies
RUN npm install --legacy-peer-deps 2>&1 || true

# Expose port
EXPOSE 3000

# Start in development mode
CMD ["npm", "run", "dev"]
