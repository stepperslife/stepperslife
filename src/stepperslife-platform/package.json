    "lucide-react": "^0.546.0",
    "next": "^16.0.3",
    "next-auth": "^5.0.0-beta.29",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hot-toast": "^2.6.0",
    "resend": "^6.4.2",
    "sharp": "^0.34.4",
