{
  "name": "stepperslife-platform",
  "version": "1.0.0",
  "description": "Unified SteppersLife Platform - Events & Store",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3004",
    "build": "prisma generate --schema=lib/db/schema.prisma && next build",
    "start": "next start -p 3004",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate --schema=lib/db/schema.prisma",
    "db:push": "prisma db push --schema=lib/db/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=lib/db/schema.prisma",
    "db:studio": "prisma studio --schema=lib/db/schema.prisma",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
