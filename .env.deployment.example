# SteppersLife Deployment Configuration
# Copy this file to .env.deployment and fill in your actual values

# ============================================================================
# VPS CONFIGURATION
# ============================================================================

# VPS SSH Connection
VPS_USER="root"
VPS_HOST="your-vps-ip-address"  # e.g., "123.45.67.89"
VPS_PORT="22"

# VPS Application Directory
VPS_DIR="/var/www/stepperlife"

# ============================================================================
# DOMAIN CONFIGURATION
# ============================================================================

# Your domain name
DOMAIN="stepperslife.com"

# ============================================================================
# GIT CONFIGURATION
# ============================================================================

# Git remote and branch
GIT_REMOTE="origin"
GIT_BRANCH="main"

# ============================================================================
# DOCKER CONFIGURATION (Advanced - usually don't need to change)
# ============================================================================

# Docker network name
DOCKER_NETWORK="app-network"

# Blue environment port (internal)
BLUE_PORT=3001

# Green environment port (internal)
GREEN_PORT=3002

# Container internal port
CONTAINER_PORT=3000

# ============================================================================
# HEALTH CHECK CONFIGURATION (Advanced)
# ============================================================================

# Health check endpoint
HEALTH_ENDPOINT="/health"

# Health check timeout (seconds)
HEALTH_TIMEOUT=30

# Health check retry interval (seconds)
HEALTH_RETRY_INTERVAL=2

# ============================================================================
# DEPLOYMENT CONFIGURATION (Advanced)
# ============================================================================

# Graceful shutdown delay (seconds)
GRACEFUL_SHUTDOWN_DELAY=30
