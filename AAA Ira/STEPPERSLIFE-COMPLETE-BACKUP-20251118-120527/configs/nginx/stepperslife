server {
    server_name stepperslife.com www.stepperslife.com 72.60.28.175;

    client_max_body_size 10M;

    location /downloads/ {
        alias /var/www/downloads/;
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
        add_header X-Robots-Tag "noindex, nofollow";
    }

    location / {
        proxy_pass http://127.0.0.1:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /uploads/ {
        alias /root/websites/stepperslife/public/uploads/;
        add_header Cache-Control "public, max-age=31536000, immutable";
        try_files $uri =404;
    }

    location /stepperslife-backup-latest.tar.gz {
        alias /root/websites/stepperslife/public/stepperslife-backup-latest.tar.gz;
        add_header Content-Disposition "attachment; filename=stepperslife-backup-latest.tar.gz";
    }

    location /_next/static {
        proxy_pass http://127.0.0.1:3001;
        proxy_cache_valid 60m;
        add_header Cache-Control "public, immutable";
    }

    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/stepperslife.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/stepperslife.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    listen 80;
    listen [::]:80;
    server_name stepperslife.com www.stepperslife.com 72.60.28.175;

    location /downloads/ {
        alias /var/www/downloads/;
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
        add_header X-Robots-Tag "noindex, nofollow";
    }

    location / {
        if ($host = www.stepperslife.com) {
            return 301 https://$host$request_uri;
        }
        if ($host = stepperslife.com) {
            return 301 https://$host$request_uri;
        }
        return 404; # For IP address access
    }
}