# ============================================================================
# ENVIRONMENT CONFIGURATION - Copy to .env.local and fill with your values
# ============================================================================

# Application Environment
NODE_ENV=development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_USER=eventuser
DB_PASSWORD=eventpass123
DB_NAME=events_db
DATABASE_URL=postgresql://eventuser:eventpass123@postgres:5432/events_db

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=redispass123
REDIS_URL=redis://:redispass123@redis:6379

# ============================================================================
# MINIO/OBJECT STORAGE CONFIGURATION
# ============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=http://minio:9000
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=events

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================
NEXTAUTH_URL=http://localhost:3004
NEXTAUTH_SECRET=your-secret-key-change-in-production-use-openssl-rand-hex-32

# Google OAuth (get from Google Cloud Console)
AUTH_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
AUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production

# ============================================================================
# PAYMENT PROCESSOR CONFIGURATION
# ============================================================================

# Square (Payment Processing)
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_APPLICATION_ID=your-square-application-id
SQUARE_LOCATION_ID=your-square-location-id
SQUARE_ENVIRONMENT=sandbox  # sandbox or production

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal (Payment Processing)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET_KEY=your-paypal-secret-key
PAYPAL_ENVIRONMENT=sandbox  # sandbox or production

# ============================================================================
# EXTERNAL API CONFIGURATION
# ============================================================================

# Resend (Email Service)
RESEND_API_KEY=your-resend-api-key

# Google AI (Gemini - for AI features)
GEMINI_API_KEY=your-gemini-api-key

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Convex (if keeping cloud backend)
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOYMENT=your-deployment
CONVEX_DEPLOY_KEY=your-deploy-key

# ============================================================================
# APPLICATION URLS
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3004
NEXT_PUBLIC_STORES_API=http://stores.localhost:3008
NEXT_PUBLIC_MAGAZINE_API=http://magazine.localhost:3001

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================
DEBUG=events:*
LOG_LEVEL=info
SENTRY_AUTH_TOKEN=your-sentry-auth-token  # optional

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================
FEATURE_AI_FLYER_ANALYSIS=true
FEATURE_ADVANCED_SEATING=true
FEATURE_PAYMENT_GATEWAY=true
FEATURE_EMAIL_NOTIFICATIONS=true

# ============================================================================
# PRODUCTION SECRETS (DO NOT COMMIT - Use in CI/CD instead)
# ============================================================================
# These should be set in your CI/CD pipeline or deployment tool
# EXAMPLE_PRODUCTION_SECRET=production-secret-value
